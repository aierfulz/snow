    <script type="text/javascript">
        function u() {
            var name = $("#user").val();
            if(name.length<=0){
                $("#span_user").html("<i class='glyphicon glyphicon-remove-sign'></i><span class='key'>用户名不能为空</span>").addClass('color');
            }
            else if (name.length < 6 || name.length > 12) {
                $("#span_user").html("<i class='glyphicon glyphicon-remove-sign'></i><span class='key'>用户名不符合格式要求</span>").addClass('color');
            }
            else if(name.length > 6 || name.length < 12){
                $("#span_user").html("<i class='glyphicon glyphicon-ok-sign'></i>")
            }
        }
        function pas() {
            var pass = $("#pass1").val();
            if(pass.length<=0){
                $("#span_pas1").html("<i class='glyphicon glyphicon-remove-sign'></i><span class='key'>密码不能为空</span>").addClass('color');
            }
            else if (pass.length < 6) {
                $("#span_pas1").html("<i class='glyphicon glyphicon-remove-sign'></i><span class='key'>密码长度不够</span>").addClass('color');
            } else{
                $("#span_pas1").html("<i class='glyphicon glyphicon-ok-sign'></i>")
            }
        }
        function pa() {
            var pass1 = $("#pass1").val();
            var pass2 = $("#pas2").val();
            if (pass1 == pass2) {
                $("#span_pas2").html("<i class='glyphicon glyphicon-ok-sign'></i>")
            } else {
                $("#span_pas2").html("<i class='glyphicon glyphicon-remove-sign'></i><span class='key'>两次输入的密码不一致</span> ").addClass('color');
            }
        }
        function em() {
            var pass1 = $("#emails").val().indexOf('@');
            var pass2 = $("#emails").val().lastIndexOf('.');
            if($("#emails").val().length<=0)
            {
                $("#span_email").html("<i class='glyphicon glyphicon-remove-sign'></i><span class='key'>邮箱不能为空</span> ").addClass('color');
            }
            else if (pass1 < 1 || pass2 - pass1 < 2) {
                $("#span_email").html("<i class='glyphicon glyphicon-remove-sign'></i><span class='key'>邮箱格式错误</span> ").addClass('color');
            } else{
                $("#span_email").html("<i class='glyphicon glyphicon-ok-sign'></i>").addClass('big');
            }
        }

        function n() {
            var pass1 = $("#name").val();
            if (pass1.length <= 0) {
                $("#span_name").html("<i class='glyphicon glyphicon-remove-sign'></i><span class='key'>真实姓名不能为空</span>");
            } else {
                $("#span_name").html("<i class='glyphicon glyphicon-ok-sign'></i>");
            }
        }

        function pl() {
            var pass1 = $("#placess").val();
            if (pass1.length <= 0) {
                $("#span_place").html("<i class='glyphicon glyphicon-remove-sign'></i><span class='key'>单位不能为空</span>");
            } else {
                $("#span_place").html("<i class='glyphicon glyphicon-ok-sign'></i>");
            }
        }
        function pr() {
            var pass1 = $("#projects").val();
            if (pass1.length <= 0) {
                $("#span_pro").html("<i class='glyphicon glyphicon-remove-sign'></i><span class='key'>项目编号不能为空</span>");
            } else {
                $("#span_pro").html("<i class='glyphicon glyphicon-ok-sign'></i>");
            }
        }
    </script>
